 <div class="content">
<div class="row">
        <div class="col-md-12">
          <div class="grid simple">
            <div class="grid-title no-border">
              <h4>Your <span class="semi-bold">Profile</span></h4>
             <p>Please fill out the form below, fill out as much as possible so potential employers can get the best picture possible.</p>
            </div>
            <div class="grid-body no-border">
			
			<%= simple_form_for @user_detail do |f| %>
                <%= f.error_notification %>
              <div class="row column-seperation">
                <div class="col-md-6">
                 <h4>Personal Information</h4>           
                    <div class="row form-row">
                      <div class="col-md-6">
                         <%= f.input_field :birthdate, as: :bootstrap_datepicker,  label: false, placeholder: 'Your date of birth', :size => '32', :required => true %>
                      </div>
                      <div class="col-md-6">
                     <%= f.input :location, collection: [ "Manchester", "Liverpool", "Leeds", "Birmingham", "London", "Newcastle", "Bristol", "Nottingham", "Sheffield"], label: false, :prompt => 'Location', wrapper: false, :size => '32', :input_html => { :id => 'source'}, :required => true %> 
                      </div>
                    </div>
                    <div class="row form-row">
                      <div class="col-md-6">
					   
                        <%= f.file_field :photo, :required => true, :input_html => { :size => '32'}, :required => true  %>
                      </div>
                      <div class="col-md-6">
                         <%= f.input_field :personality_traits, label: false, placeholder: 'Personality traits', :size => '32' %>
                      </div>
                    </div>
                    <div class="row form-row">
                      <div class="col-md-12">
                        <%= f.input_field :about_me, as: :text, label: false, placeholder: 'About Me (Max 300 words)' , :cols => '75', :rows => '7', :required => true %>
                      </div>
                    </div>
                    
                    <div class="row form-row">
                      <div class="col-md-6">
                        <%= f.input_field :contact_email , placeholder: 'Contact email ', :required => true , autofocus: true, label: false, :size => '32' %>
                      </div>
                      <div class="col-md-6">
                          <%= f.input_field :contact_number , :as => :string, :required => true, placeholder: 'Contact number ', label: false, :size => '32' %>
                      </div>
                    </div>
					<div class="row form-row">
                      <div class="col-md-12">
                         <%= f.input_field :social_link, placeholder: 'Enter a social media link', label: false, :size => '78' %>
                      </div>
                    </div>
					<div class="row-fluid">
					  
                      
					  <%= f.input :driving_license, as: :boolean, boolean_style: :inline, label: 'I have a Uk driving license' %>
                    
                      
                    
					
                      <%= f.input :car,  as: :boolean, boolean_style: :inline,  label:'I have access to a car'   %>
					
                    
                    
					<div>
					  
                      <%= f.input_field :criminal_conviction, as: :boolean, boolean_style: :inline, label: 'I Have a criminal record'  %>
					</div>
                </div>
				</div>
                <div class="col-md-6">
				
                  <h4>Education</h4>
                  
                   <div class="row form-row">
                      <div class="col-md-6">
                        <%= f.input_field :university, placeholder: 'Your University', label: false, :size => '32' %>
                      </div>
                      <div class="col-md-6">
                        <%= f.input :course, collection: [ "History", "Media", "English", "Maths", "Art", "Science", "Sport", "Business"], :prompt => "Course sector", :required => true , label: false, wrapper: false, :size => '32', :input_html => { :id => 'source'} %> 
                      </div>
                    </div>
					
					<h4>Work experience</h4>
					
					<div class="row form-row">
                      <div class="col-md-6">
                       <%= f.input_field :past_experience, :required => true, placeholder: 'Previous employee', label: false, :size => '32' %>
                      </div>
                      <div class="col-md-6">
                         <%= f.input :work_sector, collection: [ "Social media promoting", "Bartending", "Waitering/Waitressing", "Sales Assistants", "Supervisor", "Chef", "Kitchen porter", "Cleaner", "Cashier", "Telecommunications", "Festivals"], :prompt => "Employment sector", label: false, :size => '32', :required => true %>
                      </div>
                    </div>
                     <div class="row form-row">
                      <div class="col-md-12">
                        <%= f.input_field :role, :required => true, placeholder: 'What was your role at this company', label: false, :size => '78', :required => true %>
                      </div>
                    </div>
					<div class="row form-row">
                      <div class="col-md-12">
                        <%= f.input_field :about_role, as: :text, label: false, :required => true, placeholder: 'About the role (Max 300 characters)' , :cols => '75', :rows => '7', :required => true, input_html: { maxlength: 300 } %>
                      </div>
                    </div>
					<div class="row form-row">
                      <div class="col-md-6">
                         <%= f.input_field :role_length, :required => true, placeholder: 'Length at employee (in months)', label: false, :size => '32'  %>
                      </div>
                      <div class="col-md-6">
                        <%= f.input_field :reference_details_1, :required => true , placeholder: 'Reference contact email', label: false, :size => '32' %>
                      </div>
                    </div>
                    
                    <div class="row small-text">
					<p class="col-md-12">
					NOTE - All information will only be used by Zipwire and never ever sold on or used by other companies.
					</p>
					</div>
             
                </div>
              </div>
				<div class="form-actions">
					
					<div class="pull-right">
					
					   
					    <%= f.button :submit,  'Create Profile', :class => "btn btn-danger btn-cons" %>
					   <% end %>
					</div>
				  </div>
			</form>
            </div>
          </div>
        </div>
      </div>
 
			
 
  